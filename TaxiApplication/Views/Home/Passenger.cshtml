                    Source : <input id="travelfrom" type="text" name="name" value="Chichester, UK" />   <br />  <br />


                    <input type="button" value="Calculate" onclick="GetRoute()" />
                    <p></p>
                    <br />
                    <div id="dvDistance">
                        <table id="tblResults" border="1" cellpadding="10">
                            <tr>
                                <th> Start </th>
                                <th> End </th>
                                <th> Distance </th>
                                <th> Duration </th>
                            </tr>
                        </table>

