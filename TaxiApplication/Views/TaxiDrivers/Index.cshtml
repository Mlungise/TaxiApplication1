@model IEnumerable<TaxiApplication.Data.TaxiDriver>


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Owner.cshtml";

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.driverID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaxiNo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.driver.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxiNo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.td }) |
                @Html.ActionLink("Details", "Details", new { id = item.td }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.td })
            </td>
        </tr>
    }

</table>
